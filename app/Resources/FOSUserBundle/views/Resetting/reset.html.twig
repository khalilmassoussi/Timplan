{% extends '@FOSUser/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block titlefos %}
    Timplan - Récupérer votre mot de passe
{% endblock titlefos %}

{% block fos_user_content %}
    <p class="login-box-msg">Saisir votre nouveau mot de passe.</p>
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    <div class="input-group mb-3">
        {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control'}} ) }}
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'}} ) }}
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <input type="submit" class="btn btn-primary btn-block" value="{{ 'resetting.reset.submit'|trans }}"/>
        </div>
    </div>
    {{ form_end(form) }}
    <p class="mt-3 mb-1">
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans }}</a>
    </p>
{% endblock %}
