        });


        function deleteParticipant(btn) {
            //alert('delete');
            $(btn).closest('.bloc').remove();
        }

        function participantTemplate() {
            return `
    <tr class="bloc">
        <td>#nom#</td>
        <td>#prenom#</td>
        <td>#mail#</td>
        <td><center><a onclick="deleteParticipant(this)"><img src="{{ asset('Template/SupprimerUser.png') }}"  title="Supprimer le participant"></a></center></td>
    </tr>    
    `;
        }

        var _counter = 100;
        var nbr = 0;

        function addParticipant() {
            var prototype = $('#participantsBody').attr('data-prototype');
            var _prototypeDOM = $('<div/>').html(prototype).contents();//---Make sure to convert the prototype into DOM.
            var temp = SFCollectionAnalyzer.buildTemplate(_prototypeDOM, participantTemplate());
            var block = temp.replace(/__name__/g, _counter);//--temp is still using "__name__" so you just need to replace it with the counter
            $('#participantsBody').append(block);
            _counter++;
            $(".bloc").each(function (index) {
                if (index === nbr) {
                    $($(this).find('input')).each(function (index) {
                        // console.log($(this));
                        $(this).prop('required', true);
                    });
                }
            });

            nbr++;
        }
