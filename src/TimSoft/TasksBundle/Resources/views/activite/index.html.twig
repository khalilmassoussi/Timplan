{% extends 'Squelette.html.twig' %}
{% block Titre %}
    Portail web de TimSoft - Gestion des activités
{% endblock %}

{% block Section %}
    <h1>
        Gestion des activités
    </h1>
{% endblock %}


{% block Navigation %}
    <li class="breadcrumb-item active">Activités</li>
{% endblock %}
{% block Contenu %}
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            {#            <div class="card-header with-border">#}
            {#                <h2 class="card-title" style="color:#1E5584">Les plannings par utilisateur</h2>#}
            {#            </div>#}
            <div class="card-tools pull-center">
            </div>
            <div class="card-header with-border">
                <h2 class="card-title">Liste des activités</h2>
            </div>
            <div class="card-body">
                <ul>
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('activite_new') }}">Créer une nouvelle
                            activité</a>
                        {#                        {{ render(controller('TimSoftTasksBundle:Activite:new' )) }}#}
                    </li>
                </ul>

                <table id="activite" class="table table-striped dataTable">
                    <thead>
                    <tr>
                        <th>Libelle</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for activite in activites %}
                        <tr>
                            <td>{{ activite.libelle }}</td>
                            <td>

                                <a class="btn btn-default btn-sm" href="#show{{ activite.id }}"
                                   data-toggle="modal"><i
                                            class="fas fa-search fa-lg"
                                            title="Afficher {{ activite.libelle }}"></i>
                                </a>
                                {{ render(controller('TimSoftTasksBundle:Activite:show', { 'id': activite.id} )) }}


                                <a class="btn btn-primary btn-sm"
                                   href="{{ path('activite_edit', {'id': activite.id}) }}"
                                   title="Modifier {{ activite.libelle }}"><i
                                            class="fas fa-edit fa-lg"></i>
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block script %}
    {{ parent() }}
    <script>
        $('#activite').dataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                }
            }
        );
    </script>
{% endblock %}
