{% extends 'Squelette.html.twig' %}

{% block Titre %}
    Portail web de TimSoft - Modification de la facture N° {{Facture.numeroFacture}}
{%endblock %}

{%block Section %} 
    <h1>
       Gestion des factures
        <small>Modification d'une facture</small>
      </h1>
{% endblock %}


{% block Navigation %}
    {% if AutorisationAcces('ConsulterFactures' , Utilisateur) %} 
        <li><a href="{{path('ConsulterFactures')}}">Consulter la liste des factures</a></li>
     {%endif%} 
    <li class="active">Modification d'une facture</li>
    {%endblock %}

{% block css %}
    {{ parent() }}
    <style>
    #DivCauseRefus {display: none;}
</style>
{% endblock%}

{%block Contenu %}
    <div class="col-md-9">
             <div class="box box-primary">
            <div class="box-header with-border">
              <h2 class="box-title" style="color:#1E5584">Informations facture</h2>
            </div>
           <div id="DivCente"> 
              <div class="box-body">
                  <br>
                  <table width="700">
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px" width="40%"><div align="left">Numéro facture:</div></th>
                                <td style="padding: 15px 0px 0px 0px">{{Facture.numeroFacture}}</td>
                            </tr>
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px"><div align="left">Client:</div></th>
                                <td style="padding: 15px 0px 0px 0px">{{Facture.client}}</td>
                            </tr>
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px"><div align="left">Montant TTC:</div></th>
                                <td style="padding: 15px 0px 0px 0px">{{Facture.montantTTCFacture}}</td>
                            </tr>
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px"><div align="left">Date:</div></th>
                                <td style="padding: 15px 0px 0px 0px">{{Facture.dateFacture|date('d-m-Y')}}</td>
                            </tr>
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px"><div align="left">Nature de la facture:</div></th>
                                <td style="padding: 15px 0px 0px 0px">{{Facture.natureFacture}}</td>
                            </tr>
                            <tr>
                                <th scope="row" style="padding: 15px 0px 0px 0px"><div align="left">Aperçu de la facture:</div></th>
                                <td style="padding: 15px 0px 0px 0px"><a  href="{{ asset('uploads/Factures/')}}{{Facture.facturePDF}}">Voir</a></td>
                            </tr>
                         </table>
                            <br>
                {{ form_start(form) }}
                        {{form_errors(form) }}
                        <div class="form-group">
                            <label>Statut Facture</label>
                            {{ form_widget(form.statutFacture , {'attr' : {'class' : 'StatutFacture form-control'}} ) }}
                        </div>
                        <div id="DivCauseRefus">
                            <label>Cause Refus</label>
                             {{ form_widget(form.causeRefusFacture  , { 'attr' : { 'class':'form-control'} }) }}
                        </div>
                        {{ form_widget(form.client  , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.dateFacture , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.factureFile  , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.montantTTCFacture  , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.natureFacture  , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.dateFacture  , { 'attr' : { 'style':'display:none'} }) }}
                        {{ form_widget(form.numeroFacture  , { 'attr' : { 'style':'display:none'} }) }}
                        <br>
                        <div class="form-group">
                <button type="reset" class="btn btn-primary btn-block btn-flat">Annuler</button>
          </div>
		  <div class="form-group">
                      <a href="#"  class="btn btn-primary btn-block btn-flat" data-toggle="modal" data-target="#confirm-modif" >Enregister modification(s)</a>
                {#<button type="submit" class="btn btn-primary btn-block btn-flat">Enregister modification(s)</button>#}
          </div>
              </div>

              
        {{form_widget(form._token)}}
        {{ form_end(form) }}
          </div>	
		  </div>
              </div>
            <div class="modal fade" id="confirm-modif" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirmation de Modification
            </div>
            <div class="modal-body">
                Voulez Vous vraiment changer le statut de la facture ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <a class="btn btn-primary btn-ok" onclick="$('form[name=timsoft_generalbundle_facture]').submit();">Continuer</a>
            </div>
        </div>
    </div>
</div>
              
{% endblock %}

{% block script %}
    {{ parent() }}
    
    <script>
 $(function()
{
    $(".StatutFacture").change(function(){
      //alert('ooooo');
         if ($(this).val() == "Refusée")
            {
                $("#DivCauseRefus").show();
               // alert($(this).val());
            }
           
    });
});
    </script>
{% endblock%}

   

